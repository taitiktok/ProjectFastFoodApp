<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#46A043"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".Views.Fragement.TaiKhoan">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="#FDD835"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Nhóm 01 - Trường ĐH Công Nghiệp Hà Nội"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:src="@drawable/school" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:background="#5FFBEFD9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp">
        <LinearLayout
           android:paddingLeft="20dp"
            android:background="#5FFBEFD9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageNhanVienMain"
                android:layout_width="100dp"
                android:layout_marginTop="20dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="132dp"
                android:src="@drawable/shop"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF">
            </de.hdodenhof.circleimageview.CircleImageView>
        </LinearLayout>
        <LinearLayout
            android:background="#5FFBEFD9"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/design_default_color_error"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Thông tin nhân viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"

                    android:textSize="17dp"
                    android:layout_width="140dp"
                    android:text="Mã nhân viên : "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtMaNhanVienMain"
                    android:textColor="@color/nav_selected"
                    android:textSize="17dp"
                    android:text="2022601215"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="140dp"
                    android:text="Họ và tên :"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNhanVienMain"
                    android:textColor="@color/nav_selected"
                    android:textSize="17dp"
                    android:text="Ngô Khắc Tài"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_width="140dp"
                    android:text="Giới tính : "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtGioiTinhMain"
                    android:textColor="@color/nav_selected"
                    android:textSize="17dp"
                    android:text="Nam"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
              />
                <TextView
                    android:id="@+id/txtSoDienThoaiMain"
                    android:textColor="@color/nav_selected"
                    android:textSize="17dp"
                    android:text="0832696061"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:"
                    android:textColor="@color/black"
                    android:textSize="17dp"
            />

                <TextView
                    android:id="@+id/txtDiaChiMain"
                    android:textColor="@color/nav_selected"
                    android:textSize="17dp"
                    android:text="Hoa sơn – Anh Sơn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LogOut"
                android:layout_marginTop="60dp"
                android:padding="9dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/bgr_logout"
                android:orientation="horizontal"
                android:layout_width="280dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:text="Đăng xuất"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/baseline_login_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>